{
  "compilerOptions": {
    "composite": true,
    "target": "ES6",
    "module": "commonjs",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "build",
    "lib": ["es6", "dom"],
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "dist",
    "importsNotUsedAsValues": "error"
  },
  "compileOnSave": true,
  "exclude": ["test"],
  "include": ["src"],
  "references": [
    {
      "path": "../rrweb-snapshot"
    }
  ]
}
