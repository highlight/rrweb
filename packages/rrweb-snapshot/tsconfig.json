{
  "compilerOptions": {
    "types": [
      "@types/chai",
      "@types/jest",
      "@types/jsdom",
      "@types/node",
      "@types/puppeteer"
    ],
    "module": "ESNext",
    "moduleResolution": "Node",
    "downlevelIteration": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "rootDir": "src",
    "outDir": "build",
    "lib": ["es6", "dom"]
  },
  "exclude": ["test"],
  "include": ["src"]
}
